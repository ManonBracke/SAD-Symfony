{% extends 'base.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Les nouvelles</h1>


        {%for new in news%}

        <div class="row bg-black bg-opacity-50 my-4 py-2 rounded-4">
            <div class="col-md-2">
                <img src="{{ asset('img/news/' ~ new.imageName)}}" alt="{{ new.title|capitalize }}" class="img-fluid" style="height: 10rem">
            </div>
            <div class="col-md-7">
                <h5><a href="{{path('app_detail', {slug:new.slug})}}" class="nav-link text-decoration-none">{{ new.title|capitalize }}</a></h5>
                <p>{{ new.content|capitalize }}</p>
            </div>
            <div class="offset-md-1 col-md-2 text-end">
                <p class="text-light">{{new.createdAt|date('d/m/Y')}}</p>
                <a href="{{path('app_detail', {slug:new.slug})}}" class="btn btn-primary">Plus d'infos</a>
            </div>
        </div>

        {%endfor%}
    </div>


{% endblock %}
